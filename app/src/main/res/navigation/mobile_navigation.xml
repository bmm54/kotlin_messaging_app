<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <activity
        android:id="@+id/navigation_home"
        android:name="com.example.messaging_app.LatestMessages"
        android:label="@string/title_home"
        tools:layout="@layout/activity_latest_messages" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.messaging_app.ui.calls.CallsFragment"
        android:label="@string/calls"
        tools:layout="@layout/fragment_calls" />

    <activity
        android:id="@+id/navigation_notifications"
        android:name="com.example.messaging_app.ui.settings.SettingsActivity"
        android:label="@string/settings"
        tools:layout="@layout/activity_settings" />
</navigation>